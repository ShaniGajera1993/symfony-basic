{% extends "base.html.twig" %} {% block body %}

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <a class="btn btn-primary mb-3" href="movies/create" role="button"
      >Add a new movie</a
    >
  </div>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    {% for movie in movies %}
    <div class="col">
      <div class="card">
        <img
          src="{{ movie.imagePath }}"
          class="card-img-top"
          style="height: 300px; object-fit: cover"
          alt="{{ movie.title }}"
        />
        <div class="card-body">
          <h5 class="card-title">{{ movie.title }}</h5>
          <p class="card-text">{{ movie.description }}</p>
        </div>
        <div class="card-footer">
          <small class="text-muted"
            >Release Year: {{ movie.releaseYear }}</small
          >
          <a href="movies/{{ movie.id }}" class="btn btn-primary float-end">
            Read more
          </a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
